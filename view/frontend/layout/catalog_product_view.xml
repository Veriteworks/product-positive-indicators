<page layout="1column" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceContainer name="product.info.form.content">
            <block class="MageSuite\ProductPositiveIndicators\Block\OnlyXAvailable\Product" name="indicator_only_x_available" template="MageSuite_ProductPositiveIndicators::onlyxavailable/product.phtml" after="product.info.addtocart"/>
            <block class="MageSuite\ProductPositiveIndicators\Block\RecentlyBought\Product" name="indicator_recently_bought" template="MageSuite_ProductPositiveIndicators::recentlybought/product.phtml" after="indicator_only_x_available"/>
            <block class="MageSuite\ProductPositiveIndicators\Block\FreeShipping\Product" name="indicator_free_shipping" template="MageSuite_ProductPositiveIndicators::freeshipping/product.phtml" before="product.info.addtocart" />
        </referenceContainer>
    </body>
</page>
